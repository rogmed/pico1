-- check colision

function _colision()

	if enemy.ypos > 102
	 and enemy.ypos < 134
		and (enemy.xpos-8)<=player.xpos
	 and player.xpos<=(enemy.xpos+8)
	  then
     return true
 else
     return false
	end
end
