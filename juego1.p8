        cross_x+=2
    end
    if btn(0) then
        cross_x-=2
    end
    if btn(3) then
        cross_y+=2
    end
    if btn(2) then
        cross_y-=2
    end
end

function _draw()
cls()
rect(0,0,127,127,1)
rectfill(1,1,126,126,6)
spr(1,cross_x,cross_y)
end

