-- game object

enemy = {
 sprite = {46,62} ,
	xpos = flr(rnd(100) +1),
	ypos= -10,
	is_colliding = false,

 update = function(self,player)
	 self.ypos += 5
	 
	 
 -- si me paso del borde de abajo
 -- reset my pos y/x
	 if (self.ypos >= 110) then
			self.ypos = flr(rnd(40)+1)
			self.xpos = flr(rnd(100) +1)
	 end
	 
	 if(self.ypos >= player) then
			self.is_colliding = true
  end
	end,
 
 draw = function(self)
		spr(self.sprite[1],self.xpos,self.ypos)
		spr(self.sprite[1] +1 ,self.xpos +8 ,self.ypos)
		spr(self.sprite[2],self.xpos,self.ypos + 8)
		spr(self.sprite[2] +1 ,self.xpos + 8 ,self.ypos+8)
 end
}
